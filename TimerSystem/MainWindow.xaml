<Window x:Class="TimerSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerSystem"
        mc:Ignorable="d"
        Title="Timer" Height="450" Width="800">
    <Grid>
        <Label Name="LabelTime" Content="00:00:000" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="227,80,250,0" TextOptions.TextFormattingMode="Display" FontSize="72"/>
        <Button Name="ButtonToggleState" Content="Start" HorizontalAlignment="Left" Margin="250,250,0,0" VerticalAlignment="Top" Width="75" Click="ButtonToggleState_Click"/>
        <Button Name="ButtonPause" Content="Pause" HorizontalAlignment="Left" Margin="330,250,0,0" VerticalAlignment="Top" Width="75" Click="ButtonPause_Click"/>
        <ComboBox Name="ComboBoxComPort" HorizontalAlignment="Left" Margin="662,10,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
